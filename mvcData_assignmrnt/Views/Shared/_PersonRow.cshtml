@model Person


<div class="row p-3 border-bottom">
    <div class="col-3 my-auto">@Model.Name</div>
    <div class="col-6 my-auto">@Model.City</div>
    <div class="col-3">
        <a class="btn btn-outline-primary" asp-action="Details" asp-route-id="@Model.Id">Details</a>
        <button type="button" class="btn btn-outline-danger remove" onclick="removePeopleHandler('@Url.Action("Delete")?id=@Model.Id','@Model.Name')">Remove</button>
    </div>
</div>