@model List<LanguageView>


@if (Model.Count == 0)
{
    <div class="no-added">
        No language added ....!
    </div>
}
else
{
    <div class="row py-3">
        <div class="col-6 my-auto fw-bold">Name</div>
    </div>
}


@foreach (LanguageView language in Model)
{
    <div class="row p-3 border-bottom">
        <div class="col-3 my-auto">@language.Name</div>
        <div class="col-9 d-flex justify-content-end">
            <button type="button" class="btn btn-outline-danger remove" onclick="removeLanguage('@Url.Action("Remove","Languages",new {id = language.Id})')">Remove</button>
        </div>
    </div>
}