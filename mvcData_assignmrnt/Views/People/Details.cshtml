@model PersonView
@{
    ViewData["Title"] = "Details";
}

<h1 class="text-center py-3">Details</h1>

<div>
    <div class="py-2">
        <strong>Name: </strong><span>@Model.Name</span>
    </div>

    <div class="py-2">
        <strong>Phone number: </strong><span>@Model.PhoneNumber</span>
    </div>

    <div class="py-2">
        <strong>City: </strong><span>@Model.City</span>
    </div>

    <div class="py-2">
        <strong>Country: </strong><span>@Model.Country</span>
    </div>

    <div>
        <strong>Languages: </strong>
        <ul>
            @foreach(string lang in Model.Languages)
            {
                <li>@lang</li>
            }
        </ul>
    </div>

    <div class="py-4">
        <a asp-action="Index" class="link-primary fw-bold text-decoration-none">&larr; Go back</a>
    </div>

</div>

